<h2>Artist: <%= @artist.name %></h2>
<h3>Stage: <%= @artist.stage.name %></h3>

<form action="/stages/ <%= @artist.stage.id %>/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <input id="name" name="name" type="text" placeholder="Change Artist">

  <button type="submit" class="btn btn-danger">Change Artist</button>
</form>

<form action="/stages/<%= @artist.stage.id %>/artists/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete Artist</button>
</form>


<a href="/stages/<%= @artist.stage.id %>">Back to <%= @artist.stage.name %></a>